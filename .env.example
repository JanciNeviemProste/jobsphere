# ============================================================================
# JOBSPHERE - Vercel Environment Variables
# ============================================================================

# ----------------------------------------------------------------------------
# VERCEL AUTO-GENERATED (už nastavené)
# ----------------------------------------------------------------------------
# DATABASE_URL (Vercel Postgres)
# BLOB_READ_WRITE_TOKEN (Vercel Blob)
# KV_URL, KV_REST_API_URL, KV_REST_API_TOKEN (Vercel KV)
# POSTGRES_URL, POSTGRES_PRISMA_URL, POSTGRES_URL_NON_POOLING

# ----------------------------------------------------------------------------
# NEXTAUTH (POVINNÉ)
# ----------------------------------------------------------------------------
NEXTAUTH_URL="https://jobsphere-khaki.vercel.app"
NEXTAUTH_SECRET="your-secret-here-min-32-chars"
# Generate: openssl rand -base64 32

# ----------------------------------------------------------------------------
# ANTHROPIC CLAUDE AI (POVINNÉ)
# ----------------------------------------------------------------------------
ANTHROPIC_API_KEY="sk-ant-api03-your-key-here"
ANTHROPIC_MODEL="claude-opus-4-20250514"

# ----------------------------------------------------------------------------
# EMAIL - RESEND (POVINNÉ)
# ----------------------------------------------------------------------------
EMAIL_SERVICE="resend"
RESEND_API_KEY="re_your_api_key"
EMAIL_FROM="JobSphere <noreply@yourdomain.com>"

# ----------------------------------------------------------------------------
# GOOGLE OAUTH (Odporúčané)
# ----------------------------------------------------------------------------
GOOGLE_CLIENT_ID="your-id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="your-secret"

# ----------------------------------------------------------------------------
# PUBLIC ENV (prístupné v browseri)
# ----------------------------------------------------------------------------
NEXT_PUBLIC_APP_URL="https://jobsphere-khaki.vercel.app"
NEXT_PUBLIC_API_URL="https://jobsphere-khaki.vercel.app/api"
NEXT_PUBLIC_USE_VERCEL_BLOB="true"

# ----------------------------------------------------------------------------
# ALGOLIA SEARCH (Voliteľné)
# ----------------------------------------------------------------------------
ALGOLIA_APP_ID="your-app-id"
ALGOLIA_API_KEY="your-admin-key"
ALGOLIA_SEARCH_KEY="your-search-key"

# ----------------------------------------------------------------------------
# STRIPE BILLING (Voliteľné)
# ----------------------------------------------------------------------------
STRIPE_SECRET_KEY="sk_test_your_key"
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_your_key"
STRIPE_WEBHOOK_SECRET="whsec_your_secret"
STRIPE_PRICE_STARTER_MONTHLY="price_xxxxx"
STRIPE_PRICE_PROFESSIONAL_MONTHLY="price_xxxxx"
STRIPE_PRICE_ENTERPRISE_MONTHLY="price_xxxxx"

# ----------------------------------------------------------------------------
# SECURITY
# ----------------------------------------------------------------------------
CSRF_SECRET="your-csrf-secret-32-chars"
JWT_SECRET="your-jwt-secret-32-chars"

# ----------------------------------------------------------------------------
# LOCALE
# ----------------------------------------------------------------------------
DEFAULT_LOCALE="sk"
SUPPORTED_LOCALES="en,de,cs,sk,pl"

# ----------------------------------------------------------------------------
# OBSERVABILITY (Voliteľné)
# ----------------------------------------------------------------------------
NEXT_PUBLIC_SENTRY_DSN=""
SENTRY_AUTH_TOKEN=""
NEXT_PUBLIC_POSTHOG_KEY=""
NEXT_PUBLIC_POSTHOG_HOST="https://app.posthog.com"
