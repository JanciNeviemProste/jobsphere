# ==========================================
# JobSphere Web App - Environment Variables
# ==========================================
# Copy to .env.local for local development

# ----- PUBLIC (Exposed to Browser) -----
# App URL (your Vercel domain)
NEXT_PUBLIC_APP_URL=https://jobsphere.vercel.app

# API URL (Railway backend)
NEXT_PUBLIC_API_URL=https://jobsphere-api.up.railway.app

# Stripe Publishable Key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_...

# ----- SERVER-ONLY (Never exposed to browser) -----
# NextAuth
NEXTAUTH_SECRET=your-super-secret-key-min-32-chars
NEXTAUTH_URL=https://jobsphere.vercel.app

# Database (for Prisma Client)
DATABASE_URL=postgresql://user:pass@host:5432/db

# Redis (for sessions)
REDIS_URL=redis://default:pass@host:6379

# ----- OPTIONAL -----
# Analytics
NEXT_PUBLIC_POSTHOG_KEY=
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# Sentry
NEXT_PUBLIC_SENTRY_DSN=
SENTRY_AUTH_TOKEN=
