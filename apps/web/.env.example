# ----------------------------------------------------------------------------
# CV PARSING & OCR CONFIGURATION
# ----------------------------------------------------------------------------
# Enable OCR fallback for scanned PDFs (requires Python parser with Tesseract)
ENABLE_OCR="true"
# OCR timeout in milliseconds (default: 30 seconds)
OCR_TIMEOUT="30000"
# Use Docker Python parser (false = direct Python in dev mode)
USE_DOCKER_PARSER="true"
# Docker image name for Python parser
PYTHON_PARSER_IMAGE="jobsphere-python-parser"
# Maximum CV file size in bytes (default: 10MB)
MAX_FILE_SIZE="10485760"

# ----------------------------------------------------------------------------
# ANTIVIRUS CONFIGURATION (ClamAV)
# ----------------------------------------------------------------------------
# Enable ClamAV antivirus scanning before processing files
ENABLE_ANTIVIRUS="true"
# ClamAV daemon host (use 'clamav' if running in docker-compose)
CLAMAV_HOST="localhost"
# ClamAV daemon port
CLAMAV_PORT="3310"

# ----------------------------------------------------------------------------
# REDIS & BULLMQ (Required for workers)
# ----------------------------------------------------------------------------
REDIS_HOST="localhost"
REDIS_PORT="6379"
REDIS_PASSWORD=""
REDIS_URL="redis://localhost:6379"

# BullMQ Workers
ENABLE_WORKERS="true"
WORKER_CONCURRENCY="5"

