{
  "name": "@jobsphere/workers",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "nodemon",
    "build": "tsc",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@jobsphere/ai": "workspace:*",
    "@jobsphere/db": "workspace:*",
    "bullmq": "^5.1.0",
    "ioredis": "^5.3.2"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "nodemon": "^3.0.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.0"
  },
  "nodemonConfig": {
    "watch": ["src"],
    "ext": "ts,js",
    "ignore": ["src/**/*.spec.ts"],
    "exec": "ts-node ./src/index.ts"
  }
}